<%= render :partial => 'left' %>
<% content_for :head do -%>
<%= stylesheet_link_tag '/grandstand/stylesheets/wysiwyg.css' %>
<% end -%>
<% wrap_grandstand_form do -%>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :class => 'oversized text' %>
    <%= form.errors_on(:post, :name) %>
  </div>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, :class => 'wysiwyg' %>
  </div>
<% end -%>
