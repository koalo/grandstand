<h1 class="posts icon">New Blog Post</h1>
<% form_for(@post, :as => :post, :url => grandstand_posts_path) do |form| -%>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <div class="toolbar">
    <%= button 'Add Post' %>
    <%= button_link_to('Cancel', grandstand_posts_path, :class => 'cancel') %>
  </div>
<% end -%>
